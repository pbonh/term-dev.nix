[user]
	email = {{ git_email }}
	name = {{ git_name }}

[core]
	ui = auto
	editor = {{ nvim_exe }}
	excludesfile = {{ dotfiles_user_home }}/.gitignore

[pager]
	diff = {{ delta_exe }}
	log = {{ delta_exe }}
	reflog = {{ delta_exe }}
	show = {{ delta_exe }}

[interactive]
	diffFilter = {{ delta_exe }} --color-only --features=interactive

[delta]
	features = decorations

[delta "interactive"]
	keep-plus-minus-markers = false

[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
	hunk-header-decoration-style = blue box
	hunk-header-file-style = red
	hunk-header-line-number-style = "#067a00"
	hunk-header-style = file line-number syntax

[ghq]
	root = {{ code_checkout_path }}

[init]
	defaultBranch = main
